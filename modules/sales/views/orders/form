<?php
require_once '../../includes/helpers.php';
include("../../../../functions/role_functions.php");

if (!isset($_SESSION['user_id'])) {
    header('Location: /login');
    exit();
}

$id = $_GET['id'] ?? null;
$order = $items = null;

if(in_array($_SESSION['user_role'], system_users())) {
    $customers = $db->query("SELECT id, name FROM sales_customers WHERE customer_type = 'customer' ORDER BY id");
    $products  = $db->query("SELECT * FROM sales_products ORDER BY name");
} else {
    $customers = $db->query("SELECT id, name FROM sales_customers WHERE company_id = $company_id AND customer_type = 'customer' ORDER BY id");
    $products  = $db->query("SELECT * FROM sales_products WhERE company_id = $company_id ORDER BY name");
}

if ($id) {
    $order = get_row_by_id('sales_orders', $id);
    $items = $db->query("SELECT * FROM sales_order_items WHERE order_id = $id");
}
