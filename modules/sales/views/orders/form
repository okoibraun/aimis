                            </div>

                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control">
                                    <?php foreach (['pending', 'confirmed', 'shipped', 'cancelled'] as $status): ?>
                                    <option value="<?= $status ?>" <?= ($order && $order['status'] == $status) ? 'selected' : '' ?>><?= ucfirst($status) ?></option>
                                    <?php endforeach; ?>
                                </select>
