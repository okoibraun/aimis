<?php
require_once '../../includes/helpers.php';
include("../../../../functions/role_functions.php");

//Check if a user is logged in
if (!isset($_SESSION['user_id'])) {
    header('Location: /login');
    exit();
}

// Check User Permissions
$page = "add";
$user_permissions = get_user_permissions($_SESSION['user_id']);

if (!in_array($_SESSION['role'], super_roles()) && !in_array($page, $user_permissions)) {
    die("You are not authorised to access/perform this page/action <a href='javascript:history.back(1);'>Go Back</a>");
    exit;
}

$customers = $db->query("SELECT id, name FROM sales_customers WHERE company_id = $company_id AND customer_type = 'customer'");
$orders = $db->query("SELECT id, order_number FROM sales_orders WHERE company_id = $company_id");
$products = $conn->query("SELECT * FROM sales_products WHERE company_id = $company_id");

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $invoice_number = $_POST['invoice_number'];
    $invoice_date = $_POST['invoice_date'];
    $due_date = $_POST['due_date'];
    $customer_id = $_POST['customer_id'];
    $order_id = $_POST['order_id'] ?? 0;
    $total_amount = $_POST['total_amount'];
    $tax_amount = $_POST['tax_amount'];
    $notes = $_POST['notes'];

    $insert = $db->query("INSERT INTO sales_invoices (company_id, user_id, employee_id, invoice_number, invoice_date, due_date, customer_id, order_id, total_amount, tax_amount, notes, status) VALUES ($company_id,
        $user_id,
        $employee_id,
        '$invoice_number',
        '$invoice_date',
        '$due_date',
        $customer_id,
        $order_id,
        $total_amount,
        $tax_amount,
        '$notes', 'unpaid')");

    if($insert) {
      // After saving invoice main data...
      $invoice_id = $db->insert_id; // get last insert id

      // Clear existing items if updating
      $db->query("DELETE FROM sales_invoice_items WHERE invoice_id = " . intval($invoice_id));

      // Loop through POSTed items
      if (!empty($_POST['item_description'])) {
          foreach ($_POST['item_description'] as $key => $desc) {
              $product_id = !empty($_POST['item_product_id'][$key]) ? intval($_POST['item_product_id'][$key]) : 'NULL';
              $description = $_POST['item_description'][$key];
              $quantity = floatval($_POST['item_quantity'][$key]);
              $unit_price = floatval($_POST['item_unit_price'][$key]);
              $discount = floatval($_POST['item_discount'][$key]);
              $tax_rate = floatval($_POST['item_tax'][$key]);
              //$total = ($quantity * $unit_price) - $discount;
              $total = floatval($_POST['item_total'][$key]);
              
              $stmt = $db->prepare("
                  INSERT INTO sales_invoice_items (invoice_id, product_id, description, quantity, unit_price, discount, tax_rate, total)
                  VALUES (?, ?, ?, ?, ?, ?, ?, ?)
              ");
              $stmt->bind_param("iisidddd", $invoice_id, $product_id, $description, $quantity, $unit_price, $discount, $tax_rate, $total);
              $stmt->execute();
          }
      }
      // Log activity
      include('../../../../functions/log_functions.php');
      log_activity($_SESSION['user_id'], $_SESSION['company_id'], 'create_invoice', "Created invoice #{$invoice_number} for customer ID {$customer_id}");
      $_SESSION['success'] = "Invoice created successfully.";
      redirect('./');
    }
}
