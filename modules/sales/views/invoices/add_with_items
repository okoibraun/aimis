                            <label for="customer_id">Customer</label>
                            <select name="customer_id" id="customer_id" class="form-control select2" required>
                                <option value="<?= intval("0"); ?>">-- Select Customer --</option>
                                <?php foreach ($customers as $cust): ?>
                                <option value="<?= $cust['id'] ?>"><?= $cust['name'] ?></option>
                                <?php endforeach; ?>
                            </select>
                        </div>
                      </div>

                      <div class="col">
                        <div class="form-group">
                          <label for="order_id">Linked Order (Optional)</label>
                          <select name="order_id" id="order_id" class="form-control select2">
                              <option value="<?= intval("0"); ?>">-- Select Order --</option>
                              <?php foreach ($orders as $ord): ?>
                              <option value="<?= $ord['id'] ?>"><?= $ord['order_number'] ?></option>
                              <?php endforeach; ?>
                          </select>
